<h1>NEW GAME Page</h1>

<ul>
  <% @letters.each { |letter| %>
  <li><%= letter %></li>
  <% } %>
</ul>



<h4>What is the longest word you can find?</h4>

<form class="box" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Your word here">
  <input type="submit" value="Check">

</form>
